{
  "name": "@labrysio/dyon-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Dyon exchange",
  "main": "lib/index.ts",
  "scripts": {
    "test": " npx hardhat test",
    "deploy": "npx hardhat --network localhost deploy --export export.json",
    "deploy-goerli": "npx hardhat --network goerli deploy --export ./lib/export.json",
    "compile": "npx hardhat compile --force",
    "clean": "npx hardhat clean",
    "lint": "prettier --write 'src/*.sol' && prettier --list-different 'src/*.sol'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "files": [
    "lib/",
    "typechain/"
  ],
  "devDependencies": {
    "@openzeppelin/contracts": "^4.1.0",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "chai": "^4.3.4",
    "chai-ethers": "0.0.1",
    "dotenv": "^10.0.0",
    "hardhat": "^2.3.0",
    "hardhat-deploy": "^0.7.9",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-typechain": "^0.3.5",
    "husky": "^4.3.8",
    "mocha": "^8.4.0",
    "openzeppelin-solidity": "git+https://github.com/conorbros/openzeppelin-contracts.git",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.11",
    "pretty-quick": "^3.1.0",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "ethers": "^5.2.0"
  },
  "publishConfig": {
    "@labrysio:registry": "https://gitlab.com/api/v4/projects/26925809/packages/npm/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm test && echo $(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') > version.txt && git add . version.txt"
    }
  }
}
