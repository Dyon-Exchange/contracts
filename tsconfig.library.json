  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["lib", "typechain/*/**.ts", "index.ts"]
}
